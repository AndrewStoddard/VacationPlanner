@model ManageViewModel
@{
    ViewData["Title"] = "Manage";
}
<div class="container-fluid text-center">
    <h1>Manage Destinations, Accommidations, and Activities</h1>
</div>
<div class="row">
    <div class="col container-fluid">
        <h2>Add</h2>
        <form class="form-group" asp-action="AddFromManage" method="post">
            <div class="form-group border p-2">
                <label>Destination:</label>
                <input class="form-control" asp-for="DestinationName" />
            </div>

            <div class="form-group border p-2">
                <label>Accommodation Name:</label>
                <input class="form-control" asp-for="AccommodationName" />
                <label>Accommodation Email:</label>
                <input class="form-control" asp-for="AccommodationEmail" />
                <label>Accommodation Phone:</label>
                <input class="form-control" asp-for="AccommodationPhone" />
            </div>

            <div class="form-group border p-2">
                <label>Activity:</label>
                <input class="form-control" asp-for="ActivityName" />
            </div>
            <button type="submit" class="btn btn-primary m-1">Add</button>
        </form>
    </div>
    <div class="col container-fluid">
        <h2>Delete</h2>
        <form class="form-group" asp-action="DeleteFromManage" method="post">
            <div class="form-group border p-2">
                <label>Destination:</label>
                <select class="form-control" asp-for="SelectedDestinationToDelete" asp-items="@(new SelectList(Model.Destinations, "Id", "Name"))"></select>
            </div>
            <div class="form-group border p-2">
                <label>Accommodation:</label>
                <select class="form-control" asp-for="SelectedAccommodationToDelete" asp-items="@(new SelectList(Model.Accommodations, "Id", "Name"))"></select>
            </div>
            <div class="form-group border p-2">
                <label>Activity:</label>
                <select class="form-control" asp-for="SelectedActivityToDelete" asp-items="@(new SelectList(Model.Activities, "Id", "Name"))"></select>
            </div>
            <button type="submit" class="btn btn-primary m-1">Delete</button>
        </form>
    </div>
</div>

